<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tutorial.maps.google.googlemapsapplication.MainActivity"
    tools:showIn="@layout/activity_main">


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txt_uname"
        android:hint="Address"
        android:textSize="18sp"
        android:layout_below="@+id/txt_lname"
        android:layout_alignStart="@+id/txt_lname"
        android:fontFamily="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txt_fname"
        android:hint="Firstname"
        android:layout_marginTop="79dp"
        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="serif"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txt_lname"
        android:hint="Lastname"
        android:textSize="18sp"
        android:layout_below="@+id/txt_fname"
        android:layout_alignStart="@+id/txt_fname"
        android:fontFamily="serif"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txt_Pwd"
        android:hint="Password"
        android:password="true"
        android:textSize="18sp"
        android:layout_below="@+id/txt_uname"
        android:layout_alignStart="@+id/txt_uname"
        android:fontFamily="serif"
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:id="@+id/main_btn_photo"
        android:onClick="PhotoButton"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:layout_below="@+id/txt_Pwd"
        android:layout_alignStart="@+id/txt_Pwd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Photo"
        android:id="@+id/main_btn_camera"
        android:onClick="GalleryButton"
        android:fontFamily="serif"
        android:layout_alignBaseline="@+id/main_btn_photo"
        android:layout_alignBottom="@+id/main_btn_photo"
        android:layout_toEndOf="@+id/main_btn_photo"
        android:layout_marginStart="25dp" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/main_btn_camera"
        android:layout_toStartOf="@+id/main_btn_maps"
        android:layout_alignParentEnd="false"
        android:focusable="false"
        android:visibility="visible" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/main_btn_maps"
        android:onClick="MapButton"
        android:fontFamily="serif"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/main_btn_photo"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Get Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:textSize="12sp"
        android:layout_below="@+id/txt_lname"
        android:layout_alignParentEnd="true"
        android:fontFamily="serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Register Page"
        android:textStyle="bold"
        android:textSize="29dp"
        android:background="#00000000"
        android:layout_marginLeft="10dp"
        android:fontFamily="serif"
        android:editable="false"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="14dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:id="@+id/imageView2"
        android:src="@drawable/pic1"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/button" />
</RelativeLayout>
